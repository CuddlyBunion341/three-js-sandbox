    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^13.3.0",
    "prettier": "2.8.8",
    "sass": "^1.69.0",
    "simplex-noise": "^4.0.1",
    "typescript": "^5.2.2",
